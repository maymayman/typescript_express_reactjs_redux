{
  "name": "react_server_side",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "test": "TZ=Asia/Ho_Chi_Minh jest",
    "test:cov": "TZ=Asia/Ho_Chi_Minh jest --coverage",
    "start": "nodemon build/index.js",
    "build": "tsc --project tsconfig.json",
    "typecheck": "npx tsc --project tsconfig.json --noEmit --skipLibCheck",
    "prettier": "prettier --single-quote --write '{src,__test__}/**/*.{ts,js,json}'",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' index.ts --verbose",
    "lint": "npx tslint --project tsconfig.json --config tslint.json './**/*.{ts,tsx}'",
    "lint:fix": " npx tslint --fix --project tsconfig.json --config tslint.json './**/*.{ts,tsx}'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/express": "^4.17.1",
    "app-root-path": "3.0.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "morgan": "1.9.1",
    "swagger-ui-express": "^4.0.2",
    "winston": "3.2.1",
    "winston-daily-rotate-file": "4.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/jest": "^24.0.25",
    "@types/node": "12.11.6",
    "concurrently": "^2.2.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4",
    "prettier": "^1.19.1",
    "husky": "^4.2.3",
    "lint-staged": "7.3.0",
    "validate-commit": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run typecheck && npm run test:cov",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "{src,seeders,MockData,jobs}/**/*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint:fix",
      "git add"
    ]
  }
}
